<nav class="my-2 my-md-0 mr-md-3">
  <%= form_tag(contacts_path, class: "form-inline my-2 my-lg-0", role: "search", method: :get, remote: true) do %>
    <div class="input-group ui-front">
      <%= text_field_tag :term, params[:term], class: "form-control", placeholder: "Search...", autocomplete: "off" %>
      <%= hidden_field_tag :group_id, params[:group_id] %>
      <button class="btn btn-outline-success my-2 my-sm-0 btn-search" type="submit">
        <i class="fas fa-search"></i>
      </button>
    </div>
  <% end %>
</nav>
