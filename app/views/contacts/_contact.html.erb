<tr>
  <td class="middle">
    <div class="media">
      <div class="media-left">
        <a href="#">
          <%= image_tag contact.avatar.url(:thumb), class: "media-object", style: "width:100px; height: 100px" %>
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= contact.name %></h4>
        <address>
          <strong><%= contact.company %></strong><br>
          <%= contact.email %>
        </address>
      </div>
    </div>
  </td>
  <td width="100" class="middle">
    <div>
      <%= link_to edit_contact_path(contact), class: "btn btn-circle btn-outline-primary btn-sm", title: "Edit" do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= link_to destroy_contact_path(contact), method: :delete, class: "btn btn-circle btn-danger btn-xs", title: "Delete", data: { confirm: "Are your sure?" } do %>
        <i class="fas fa-edit"></i>
      <% end %>
    </div>
  </td>
</tr>
